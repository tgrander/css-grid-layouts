---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import "@styles/carousel/timed-3.css";
import { ChevronLeft, ChevronRight, Pause, Play } from "lucide-astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";

const imageUrls = [
  "/images/carousel/trey.jpg",
  "/images/carousel/a.jpg",
  "/images/carousel/b.jpg",
  "/images/carousel/c.jpg",
  "/images/carousel/d.jpg",
  "/images/carousel/e.jpg",
  "/images/carousel/g.jpg",
  "/images/carousel/h.jpg",
  "/images/carousel/i.jpg",
];
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main id="app">
      <div class="heading">
        <h3>üñºÔ∏è Image Carousel</h3>
        <p>Timed Vanilla JS Implementation 3 (45 minutes)</p>
      </div>

      <section id="carousel__container">
        <div class="carousel__track-wrapper">
          <div class="carousel__track">
            {
              imageUrls.map((url, index) => (
                <div class="carousel__slide">
                  <img
                    class="carousel__img"
                    src={url}
                    alt={`Image ${index + 1}`}
                  />
                </div>
              ))
            }
          </div>
        </div>

        <div class="carousel__navigation-wrapper">
          <div class="carousel__progress-wrapper">
            <div class="carousel__play-pause-wrapper">
              <button class="carousel__play-pause-btn pause">
                <span class="icon icon--pause">
                  <Pause />
                </span>
              </button>
              <button class="carousel__play-pause-btn play">
                <span class="icon icon--play">
                  <Play />
                </span>
              </button>
            </div>

            <div class="carousel__nav-dots-wrapper">
              {
                Array.from({ length: imageUrls.length }).map((_, index) => (
                  <button class="carousel__dot" />
                ))
              }
            </div>
          </div>

          <div class="carousel__nav-buttons-wrapper">
            <button class="carousel__nav-button prev">
              <span class="carousel__nav-prev-icon">
                <ChevronLeft />
              </span>
            </button>
            <button class="carousel__nav-button next">
              <span class="carousel__nav-next-icon">
                <ChevronRight />
              </span>
            </button>
          </div>
        </div>
      </section>
    </main>
  </body><script src="../../scripts/carousel/timed-3.ts"></script>
</html>
