    <style>
      html,
      body {
        min-height: 100dvh;
        font-size: 100%;
      }
      body {
        display: grid;
        grid-template-columns: 20% 1fr 20%;
        grid-template-areas:
          ". . ."
          ". carousel ."
          ". . .";
      }

      .carousel-container {
        grid-area: carousel;
        width: 100%;
        height: 100%;
      }

      .carousel-track-container {
        position: relative;
        width: 100%;
        height: 100%;
        overflow: hidden;
        border-radius: 2rem;
      }

      .carousel-track {
        position: relative;
        width: 100%;
        height: 100%;
        transition: transform 0.3s ease;
      }

      .carousel-slide {
        position: absolute;
        top: 0;
        bottom: 0;
        width: 100%;
        height: 100%;
      }

      .carousel-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      button {
        border: none;
        cursor: pointer;
        font-size: 1rem;
        border-radius: 2rem;
        padding: 0.25rem 1rem;
        box-shadow: none;
      }

      .buttons-container {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 0;
        font-size: 1.2rem;
      }
      .navigation-buttons {
        display: flex;
        gap: 0.5rem;
      }

      .carousel-button svg {
        width: 24px;
        height: 24px;
      }

      .indicator-buttons {
        display: flex;
        gap: 1rem;
      }
      .dots-container {
        display: flex;
        align-items: center;
        gap: 0.2rem;
      }
      .dots-container > button.dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: rgba(0, 0, 0, 0.3);
        border: none;
        padding: 0;
        margin: 0 4px;
        cursor: pointer;
      }
      .dots-container > button.dot:hover,
      .dots-container > button.dot:focus {
        background: rgba(0, 0, 0, 0.5);
      }
      .dots-container > button.dot.active {
        background: rgba(0, 0, 0, 0.7);
      }

      .hidden {
        display: none;
      }
    </style>
  </head>
